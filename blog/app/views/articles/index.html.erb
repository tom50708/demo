
<table class="table table-striped">
	<tr>
		<td>#</td>
		<td>Title</td>
		<td></td>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td>#</td>
			<td><%= link_to article.title, article_path(article)%></td>
			<td><%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-sm btn-default' %>
				<%= link_to 'Delete', article_path(article), method: :delete, :class => 'btn btn-sm btn-default' %>
			</td>
		</tr>
	<% end %>
</table>
<%= link_to 'new article',new_article_path, :class => 'btn btn-sm btn-default' %>
